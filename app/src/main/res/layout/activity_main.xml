<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/pointglogo"
            android:orientation="horizontal"

            >

            <RelativeLayout
                android:id="@+id/belo3w3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="#000000"

                >

                <ImageView
                    android:id="@+id/lolo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pointguard" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lolo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Powered by"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView8"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="MORELIFE Inc"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@drawable/pointglogo"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:id="@+id/below3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="#000000"
                >

                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton

                    android:id="@+id/hy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="39dp"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:background="@drawable/signupbtn"
                    android:text="SIGN UP WITH GOOGLE !"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:elevation="5dp"
                    android:stateListAnimator="@anim/rotate"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#3b5998"
                    app:spinning_bar_color="#000000"
                    app:spinning_bar_padding="6dp"
                    app:spinning_bar_width="4dp" />



                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:layout_centerHorizontal="true"
                    android:maxLines="1"
                    android:onClick="onClick"
                    android:text="By Signing in, you agree to our Terms and Conditions"
                    android:textColor="#ffffff" />


            </RelativeLayout>

        </LinearLayout>




    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:id="@+id/card_view"
        android:clipToPadding="false"
        android:layout_marginTop="180dp"

        >

    </RelativeLayout>


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="Text"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/nid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:text="Text"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/larry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:text="Text"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:visibility="gone"
        />



</android.support.design.widget.CoordinatorLayout>